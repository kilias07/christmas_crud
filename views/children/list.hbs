<h2>List of children</h2>
<ul>
    {{#each childrenList}}
        <li>
            <form action="/child/gift/{{this.id}}?_method=PATCH" method="POST">
                <label>
                    {{this.name}}
                    <select name="giftId">
                        <option value="">None</option>
                        {{#each ../giftsList}}
                            <option value="{{this.id}}" {{#if (equals this.id ../giftId)}}selected="selected" {{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </label>
                <button>Save</button>
            </form>
        </li>
    {{/each}}
</ul>

<h2>Add children to list</h2>
<form action="/child" method="post">
    <label>
        Name
        <input type="text" name="name">
    </label>
    <button>Add</button>
</form>